extends layout

block content
	.login_form.col-md-4
		h1 Sign In!
		br
		form(method='POST', action='/login')
			#form-group
				label Username:
				input.form-control(name='username', type='text')
			#form-group
				label Password:
				input.form-control(name='password', type='password')
				br
			input.btn.btn-primary.col-md-12(type='submit', value='Submit')