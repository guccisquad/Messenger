doctype html
html
	head
		title Messenger
		link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
		link(rel='stylesheet' href='/css/style.css')
		script(src='https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.1.0/socket.io.js')
	body
		.d-flex.flex-column.flex-md-row.align-items-center.p-3.px-md-4.mb-3.bg-white.border-bottom.box-shadow
			h5.my-0.mr-md-auto.font-weight-normal Company name
			nav.menubar.my-2.my-md-0.mr-md-3
				if user
					a.p-2(href='/chat') Chat
				a.p-2(href='/faq') FAQ
				a.p-2(href='/support') Support
				if user
					a.p-2(href='/logout') Logout
				else
					a.p-2(href='/register') Sign up
					a.p-2(href='/login') Sign in
		.container  
			br
			!= messages('message', locals)
			if errors
				each error, i in errors
					div(class="alert alert-danger") #{error.msg}
			block content
			br
			hr
			footer
				p Copyright &copy; 2018
		script(src='/bower_components/jquery/dist/jquery.js')
		script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
		script(src='/scripts/chat.js')
		script(src='/scripts/moment.min.js')