extends layout

block content
	.register_form.col-md-4
		h1 Registration
		br
		form(method='POST', action='/register')
			#form-group
				label Name:
				input.form-control(name='name', type='text')
			#form-group
				label Email:
				input.form-control(name='email', type='text')
			#form-group
				label Username:
				input.form-control(name='username', type='text')
			#form-group
				label Password:
				input.form-control(name='password', type='password')
			#form-group
				label Confirm:
				input.form-control(name='password2', type='password')
				br
			input.btn.btn-primary.col-md-12(type='submit', value='Submit')